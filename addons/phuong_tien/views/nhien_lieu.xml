<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_nhien_lieu_form" model="ir.ui.view">
            <field name="name">nhien_lieu.form</field>
            <field name="model">nhien_lieu</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="ten_nhien_lieu"/>
                            <field name="don_gia"/>
                            <field name="so_luong"/>
                            <field name="ngay_nhap"/>
                            <field name="nha_cung_cap"/>
                            <field name="phuong_tien_id"/>
                            <field name="tong_tien"/>
                        </group>
                        <!-- <notebook>
                            <page string="Phương Tiện">
                                <field name="phuong_tien_id">
                                    <tree editable="bottom">
                                        <field name="bien_so_xe"/>
                                        <field name="loai_xe"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook> -->
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_nhien_lieu_tree" model="ir.ui.view">
            <field name="name">nhien_lieu.tree</field>
            <field name="model">nhien_lieu</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ten_nhien_lieu"/>
                    <field name="don_gia"/>
                    <field name="so_luong"/>
                    <field name="ngay_nhap"/>
                    <field name="nha_cung_cap"/>
                    <field name="phuong_tien_id"/>
                    <field name="tong_tien"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_nhien_lieu" model="ir.actions.act_window">
            <field name="name">Quản lý Nhiên Liệu</field>
            <field name="res_model">nhien_lieu</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
