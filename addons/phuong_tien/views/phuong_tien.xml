<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_phuong_tien_form" model="ir.ui.view">
            <field name="name">phuong_tien.form</field>
            <field name="model">phuong_tien</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="bien_so_xe"/>
                                <field name="loai_xe"/>
                                <field name="hang_san_xuat"/>
                                <field name="nam_san_xuat"/>
                                <field name="mau_sac"/>
                                <field name="trang_thai"/>
                                <field name="tai_xe_id" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="image" widget="image" options="{'size': [128, 128]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Hành Trình">
                                <field name="hanh_trinh_ids">
                                    <tree>
                                        <field name="tai_xe_id"/>
                                        <field name="ngay_bat_dau"/>
                                        <field name="ngay_ket_thuc"/>
                                        <field name="trang_thai"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Bảo Trì">
                                <field name="bao_tri_ids">
                                    <tree>
                                        <field name="ngay_bao_tri"/>
                                        <field name="tai_xe_id"/>
                                        <field name="trang_thai"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_phuong_tien_tree" model="ir.ui.view">
            <field name="name">phuong_tien.tree</field>
            <field name="model">phuong_tien</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="bien_so_xe"/>
                    <field name="loai_xe"/>
                    <field name="trang_thai"/>
                    <field name="tai_xe_id" widget="many2many_tags"/>
                    <field name="thoi_gian_muon_tra"/>
                    <field name="thoi_gian_muon_tra_thuc_te"/>
                    <field name="thoi_gian_muon_tra_muon"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_phuong_tien_search" model="ir.ui.view">
            <field name="name">phuong_tien.search</field>
            <field name="model">phuong_tien</field>
            <field name="arch" type="xml">
                <search>
                    <field name="bien_so_xe"/>
                    <field name="loai_xe"/>
                    <field name="hang_san_xuat"/>
                    <field name="tai_xe_id"/>
                    <filter string="Đang hoạt động" name="hoat_dong" domain="[('trang_thai', '=', 'hoatdong')]"/>
                    <filter string="Đang bảo trì" name="bao_tri" domain="[('trang_thai', '=', 'baotri')]"/>
                    <filter string="Dừng hoạt động" name="dung" domain="[('trang_thai', '=', 'dung')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Loại xe" name="group_loai_xe" context="{'group_by': 'loai_xe'}"/>
                        <filter string="Trạng thái" name="group_trang_thai" context="{'group_by': 'trang_thai'}"/>
                        <filter string="Năm sản xuất" name="group_nam_san_xuat" context="{'group_by': 'nam_san_xuat'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Graph View -->
        <record id="view_phuong_tien_graph" model="ir.ui.view">
            <field name="name">phuong_tien.graph</field>
            <field name="model">phuong_tien</field>
            <field name="arch" type="xml">
                <graph string="Thống kê phương tiện" type="bar">
                    <field name="loai_xe"/>
                    <field name="trang_thai" type="row"/>
                </graph>
            </field>
        </record>

        <!-- Action -->
        <record id="action_phuong_tien" model="ir.actions.act_window">
            <field name="name">Quản lý Phương Tiện</field>
            <field name="res_model">phuong_tien</field>
            <field name="view_mode">tree,form,graph</field>
        </record>
    </data>
</odoo>
