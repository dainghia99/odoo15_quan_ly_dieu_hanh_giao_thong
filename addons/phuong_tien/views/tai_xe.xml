<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_tai_xe_form" model="ir.ui.view">
            <field name="name">tai_xe.form</field>
            <field name="model">tai_xe</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="ho_ten"/>
                                <field name="so_gplx"/>
                                <field name="ngay_sinh"/>
                                <field name="so_dien_thoai"/>
                                <field name="trang_thai"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Phương Tiện">
                                <field name="phuong_tien_ids"/>
                            </page>
                            <page string="Hành Trình">
                                <field name="hanh_trinh_ids">
                                    <tree>
                                        <field name="phuong_tien_id"/>
                                        <field name="ngay_bat_dau"/>
                                        <field name="ngay_ket_thuc"/>
                                        <field name="trang_thai"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Bảo Trì">
                                <field name="bao_tri_ids">
                                    <tree>
                                        <field name="phuong_tien_id"/>
                                        <field name="ngay_bao_tri"/>
                                        <field name="trang_thai"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_tai_xe_tree" model="ir.ui.view">
            <field name="name">tai_xe.tree</field>
            <field name="model">tai_xe</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ho_ten"/>
                    <field name="so_gplx"/>
                    <field name="trang_thai"/>
                </tree>
            </field>
        </record>

        <!-- Thêm Graph View -->
        <record id="view_tai_xe_graph" model="ir.ui.view">
            <field name="name">tai_xe.graph</field>
            <field name="model">tai_xe</field>
            <field name="arch" type="xml">
                <graph string="Thống kê tài xế" type="pie">
                    <field name="trang_thai"/>
                </graph>
            </field>
        </record>

        <!-- Action -->
        <record id="action_tai_xe" model="ir.actions.act_window">
            <field name="name">Quản lý Tài Xế</field>
            <field name="res_model">tai_xe</field>
            <field name="view_mode">tree,form,graph</field>
        </record>
    </data>
</odoo>
