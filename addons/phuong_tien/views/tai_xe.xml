<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_tai_xe_form" model="ir.ui.view">
            <field name="name">tai_xe.form</field>
            <field name="model">tai_xe</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="ho_ten"/>
                            <field name="so_gplx"/>
                            <field name="ngay_sinh"/>
                            <field name="so_dien_thoai"/>
                            <field name="trang_thai"/>
                        </group>
                        <notebook>
                            <page string="Phương Tiện">
                                <field name="phuong_tien_ids">
                                    <tree editable="bottom">
                                        <field name="bien_so_xe"/>
                                        <field name="loai_xe"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_tai_xe_tree" model="ir.ui.view">
            <field name="name">tai_xe.tree</field>
            <field name="model">tai_xe</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ho_ten"/>
                    <field name="so_gplx"/>
                    <field name="trang_thai"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_tai_xe" model="ir.actions.act_window">
            <field name="name">Quản lý Tài Xế</field>
            <field name="res_model">tai_xe</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
